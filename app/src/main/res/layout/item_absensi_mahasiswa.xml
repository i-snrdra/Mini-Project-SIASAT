<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvKodeMatkul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIF123"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tvNamaMatkul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemrograman Mobile"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 Jan 2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_gravity="top" />

        </LinearLayout>

        <!-- Info Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvDosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosen: Dr. John Doe"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvRuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruang: Lab 1"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvJamBuka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dibuka: 08:00"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvJumlahHadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 mahasiswa sudah absen"
                android:textSize="12sp"
                android:textColor="@color/accent" />

        </LinearLayout>

        <!-- Join Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinAbsensi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Join Absensi"
            android:textSize="14sp"
            app:icon="@drawable/ic_check_circle_24"
            app:iconGravity="textStart"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 