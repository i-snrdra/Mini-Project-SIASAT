<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header dengan kode dan nama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_kode_matkul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIF123"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@drawable/badge_background"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_nama_matkul"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pemrograman Web"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Detail mata kuliah row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Hari"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_hari"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Senin"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Detail mata kuliah row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_waktu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="08:00 - 10:00"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Detail mata kuliah row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="SKS"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_sks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Detail mata kuliah row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Kapasitas"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_kapasitas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40 mahasiswa"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="8dp" />

        <!-- Status dosen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Dosen"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_dosen_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Belum ada dosen"
                android:textSize="12sp"
                android:textColor="@color/warning"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Edit"
                android:textSize="12sp"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/white"
                app:cornerRadius="6dp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Hapus"
                android:textSize="12sp"
                android:backgroundTint="@color/error"
                android:textColor="@color/white"
                app:cornerRadius="6dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 