<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKodeMatkul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIF123"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvNamaMatkul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemrograman Mobile"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvBobot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobot: 4.0"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvTanggalInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diinput: 15 Jan 2024"
                android:textSize="11sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Grade Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvNilaiAkhir"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:gravity="center"
                android:background="@drawable/circle_background_outline"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LULUS"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/success" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 